// This file points to the root Prisma schema
// The actual schema is in ../prisma/schema.prisma
// This allows the client to generate Prisma Client from the root schema

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

